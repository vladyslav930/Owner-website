@import '~@myndmanagement/styles/styles/variables'
@import '~@myndmanagement/styles/styles/color-palette'
@import 'styles/variables'
@import 'styles/blocks'

$table-header-label = #9897B7
$switch-inactive-circle = #C4CACE
$switch-inactive-background = #E1E4E6

.grid
  font-family: $font-family-open-sans
  width: 100%
  display: flex
  flex-direction: column

  + .grid
    margin-top: 32px

  .grid-columns-headers
    display: flex
    flex-direction: row-reverse
    color: $color-mynd-navy
    font-weight: 700
    padding: 14px 20px

  .grid-content
    width: 100%
    display: flex
    flex-direction: column
    background: $color-mynd-white
    {$container-shadow}

  .header
    display: flex
    justify-content: space-between
    width: 100%
    padding: 0 25px
    line-height: 19px
    border-bottom: 1px solid $color-mynd-navy-10

    .row
      width: 100%

  .header-label
    font-weight: bold
    font-size: 12px
    line-height: 16px
    text-transform: uppercase
    color: $table-header-label

  .header-note
    color: $color-mynd-navy-50-rgba
    font-size: 12px
    margin-top: 8px

  .rows
    display: flex
    flex-direction: column
    width: 100%
    padding: 0 25px

  .row
    padding: 18px 0
    display: flex
    justify-content: space-between
    align-items: center

  .row + .row
    border-top: 1px solid $color-mynd-navy-10

  .row-label-text
    font-weight: 600
    color: $color-mynd-navy-75-rgba
    font-family: $font-open-sans
    font-weight: 600
    font-size: 14px
    line-height: 19px
    color: $color-mynd-navy-75

  .row-label-note
    color: $color-mynd-navy-50-rgba

  .row-value
    display: flex
    align-items: center

    m-form-switch
      width: auto
      height: auto
      margin-bottom: 0

      &.disabled
        opacity: .4
        pointer-events: none

      ::ng-deep
        label.switch-wrapper
          .switch
            width: 48px
            height: 24px

            input
              &:checked
                + .slider
                  background-color: $color-mynd-green

                  &:before
                    background-color: $color-mynd-white
                    transform: translate(23px, -50%)

              + .slider
                background-color: $switch-inactive-background

                &:before
                  width: 18px
                  height: 18px
                  top: 50%
                  transform: translateY(-50%)
                  background-color: $switch-inactive-circle

    ::ng-deep
      button
        color: $color-mynd-navy-75-rgba
        border-color: $color-mynd-navy-75-rgba
