@import '~@myndmanagement/styles/styles/variables'
@import '~@myndmanagement/styles/styles/color-palette'
@import 'styles/variables'
@import 'styles/blocks'

.name
  font-family: $font-open-sans
  font-weight: bold
  font-size: 1.4rem
  line-height: 1.9rem
  text-transform: uppercase
  color: $color-mynd-navy-50

.row
  width: 100%

.bio
  font-family: $font-open-sans
  font-size: 1.2rem
  line-height: 1.6rem
  padding: 1.5rem
  margin-top: 1.5rem
  white-space: pre-line
  width: 100%

  color: $color-mynd-navy-75

  {$container-shadow}

.video-wrapper
  width: 100%

  &.hidden
    display: none

.video-container
  position: relative
  width: 100%
  padding-bottom: 56.25% /* 16:9 */
  padding-top: 25px

  iframe
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

o-widget-wrapper
  ::ng-deep
    .video-wrapper
      &.scale
        iframe
          top: -50%
          height: 200%

    .plyr
      width: 100%
      aspect-ratio: 16/9
      --plyr-color-main: transparentify($color-mynd-navy, .3)

      iframe
        position: absolute
        left: 0
        width: 100%
        height: 100%
        border: 0
