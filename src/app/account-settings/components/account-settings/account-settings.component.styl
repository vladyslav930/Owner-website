@import '~@myndmanagement/styles/styles/variables'
@import 'styles/variables'

:host
  display: flex
  flex-direction: column
  flex: 1
  font-family: $font-open-sans
  background-color: $background-color

.content-container
  display: grid
  grid-gap: 26px
  grid-template-columns: 264px 1fr
  grid-template-rows: 38px
  padding: 26px 64px 85px 64px

.header-container
  display: flex
  align-items: center
  justify-content: space-between

  grid-column: 1 / 3
  grid-row: 1

.header
  display: flex
  align-items: center
  justify-content: space-between
  width: 100%

  font-family: $font-open-sans
  font-size: 22px
  color: $color-mynd-blue-dark

.side-menu
  grid-column: 1
  grid-row: 2

.route-content-container
  grid-column: 2
  grid-row: 2
